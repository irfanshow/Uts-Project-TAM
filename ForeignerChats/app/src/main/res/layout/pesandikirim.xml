<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginLeft="50dp"
    android:padding="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/pesandikirimkotak"
        android:id="@+id/layoutpesan">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Halo"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:paddingLeft="7dp"
            android:paddingRight="40dp"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:id="@+id/pesanpengirim">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/waktupesan"
            android:textSize="15sp"
            android:layout_toRightOf="@id/pesanpengirim"
            android:layout_marginLeft="-40dp"
            android:layout_alignBottom="@id/pesanpengirim"
            android:text="17:00"
            android:padding="7dp"
            android:textColor="@color/grey" />





    </RelativeLayout>







</RelativeLayout>