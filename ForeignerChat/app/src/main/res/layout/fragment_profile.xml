<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="BottomNavigation.ProfileFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/atas"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/namaUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:layout_toRightOf="@id/imageView"
        android:fontFamily="@font/poppins_bold"
        android:text="Nama"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/detailuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/follower"
        android:layout_marginLeft="20dp"

        android:layout_toRightOf="@id/imageView"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="detail"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namaUser"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/imageView"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="Follower 0 "
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namaUser"
        android:id="@+id/follower"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/following"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="Following 1"
        android:textSize="20sp" />

</RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atas">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Datamu"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_bold"
                />
            <TextView
                android:id="@+id/namaUser2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="nama"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/negarauser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="negara"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/detailuser2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="detail"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"
                />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>